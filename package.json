{
  "name": "athena-contracts",
  "description": "Athena Cover - Smart Contracts",
  "author": "blackwhale.eth",
  "version": "0.3.0",
  "license": "UNLICENSED",
  "main": "hardhat.config.ts",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test ./test/index.ts",
    "typechain": "typechain --target ethers-v5 --out-dir typechain",

    "prettier:check": "prettier -c --plugin=prettier-plugin-solidity .",
    "prettier:write": "prettier -w --plugin=prettier-plugin-solidity .",
 
    "deploy:fork": "npx hardhat run --network hardhat scripts/deploy.ts",
    "deploy:mumbai": "npx hardhat run --network mumbai scripts/deploy.ts",
    "deploy:polygon": "npx hardhat run --network polygon scripts/deploy.ts",

    "pool:fork": "npx hardhat run --network hardhat scripts/createPool.ts",
    "pool:mumbai": "npx hardhat run --network mumbai scripts/createPool.ts",
    "pool:polygon": "npx hardhat run --network polygon scripts/createPool.ts",

    "verify:mumbai": "npx hardhat run --network mumbai scripts/verify.ts ",
    "verify:polygon": "npx hardhat run --network polygon scripts/verify.ts ",

    "gen:exports": "npx ts-node scripts/gen/gen-exports.ts",
    "gen:fnsigs": "npx ts-node scripts/gen/gen-fnsigs.ts",
    "gen:interfaces": "npx ts-node scripts/gen/gen-interfaces.ts && npx prettier --write contracts/interfaces"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/async": "^3.2.23",
    "@types/chai": "^4.3.8",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "async": "^3.2.5",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.9.5",
    "hardhat-gas-reporter": "^1.0.7",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.7.19",
    "ts-node": "^10.9.1",
    "typechain": "^5.2.0",
    "typescript": "^5.2.2"
  },
  "overrides": {}
}
